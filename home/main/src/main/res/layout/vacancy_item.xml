<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/black"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:onClick="onCardClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Верхний текст (сейчас просматривает 1 человек) и иконка избранного -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal|end"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <!-- Текст "Сейчас просматривает 1 человек" -->
            <TextView
                android:id="@+id/lookingNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сейчас просматривает 1 человек"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:visibility="visible"
                android:layout_weight="1" />

            <!-- Иконка избранного -->
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:foregroundGravity="right"
                android:onClick="onFavoriteClick"
                android:src="@drawable/ic_favourite" />
        </LinearLayout>

        <!-- Заголовок должности (UI/UX Designer) -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI/UX Designer"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Местоположение и компания -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Название компании -->
            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мобирикс"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Иконка проверенности компании -->
            <ImageView
                android:id="@+id/companyVerifiedIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_check" />
        </LinearLayout>

        <!-- Местоположение (Город) -->
        <TextView
            android:id="@+id/town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Минск"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Иконка опыта и текст -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Иконка опыта -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_experience" />

            <!-- Текст опыта -->
            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опыт от 1 года до 3 лет"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Дата публикации -->
        <TextView
            android:id="@+id/publishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Опубликовано 20 февраля"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Кнопка отклика -->
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Откликнуться"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
